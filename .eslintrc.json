{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "serviceWorkerOption": true
  },
  "rules": {
    "key-spacing"                 : "off",
    "jsx-quotes"                  : [2, "prefer-double"],
    "react/jsx-indent"            : "off",
    "max-len"                     : [2, 120, 2],
    "object-curly-spacing"        : [2, "always"],
    "comma-dangle"                : "off",
    "quotes"                      : "off",
    "semi"                        : "off",
    "semi-spacing"                : "off",
    "space-before-function-paren" : "off",
    "indent"                      : "off"
  }
}
